<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<!-- generated by Spindle, http://spindle.sourceforge.net -->

<web-app>

    <display-name>HuronPeak</display-name>

    <!-- Disable URL rewriting of session.  We only want it to be set as a cookie. -->
    <context-param>
        <param-name>org.eclipse.jetty.servlet.SessionIdPathParameterName</param-name>
        <param-value>none</param-value>
    </context-param>

    <filter>
        <filter-name>servletRequestCleanupFilter</filter-name>
        <filter-class>org.sourceid.servlet.filter.ServletRequestCleanupFilter</filter-class>
    </filter>

    <filter>
        <filter-name>noCacheFilter</filter-name>
        <filter-class>com.pingidentity.filter.NoCacheFilter4Admin</filter-class>
    </filter>

    <filter>
        <filter-name>frameBusterFilter</filter-name>
        <filter-class>com.pingidentity.filter.FrameBusterFilter</filter-class>
    </filter>

    <filter>
        <filter-name>redirect</filter-name>
        <filter-class>org.apache.tapestry.RedirectFilter</filter-class>
    </filter>

 	<filter>
        <filter-name>responseHeaderAdminConsoleFilter</filter-name>
        <filter-class>com.pingidentity.filter.ResponseHeaderAdminConsoleFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>servletRequestCleanupFilter</filter-name>
        <url-pattern>/app</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>noCacheFilter</filter-name>
        <url-pattern>/app</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>frameBusterFilter</filter-name>
        <url-pattern>/app</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>redirect</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
	
	 <filter-mapping>
        <filter-name>responseHeaderAdminConsoleFilter</filter-name>
        <url-pattern>/app</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.pingidentity.fsm.SessionCounter</listener-class>
    </listener>
    <listener>
        <listener-class>com.pingidentity.fsm.SessionTimeout</listener-class>
    </listener>
    <servlet>
        <servlet-name>HuronPeak</servlet-name>
        <servlet-class>org.apache.tapestry.ApplicationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>HuronPeak</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>

    <session-config>
        <!-- Default to 30 minute session timeouts -->
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
